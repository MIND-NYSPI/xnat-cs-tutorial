        {
          "name": "invol_scan",
          "description": "scan of the input volume",
          "type": "Scan",
          "matcher": "'NIFTI' in @.resources[*].label",
          "default-value": null,
          "required": true,
          "replacement-key": null,
          "provides-value-for-command-input": "",
          "provides-files-for-command-mount": "",
          "user-settable": true,
          "load-children": true
        },
        {
          "name": "refvol_scan",
          "description": "scan of the reference volume",
