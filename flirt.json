          "required": true,
          "replacement-key": null,
          "provides-value-for-command-input": "",
          "provides-files-for-command-mount": "",
          "user-settable": null,
          "load-children": true,
          "derived-from-wrapper-input": "invol_resource",
          "derived-from-xnat-object-property": null
        },
        {
          "name": "refvol_file",
